{
  "name": "littlefoot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "npm run clean && npm run build:lib && npm run build:site",
    "build:lib": "npx esbuild --bundle lib/index.ts --sourcemap --outfile=build/iife/littlefoot.js --format=iife --global-name=littlefoot",
    "build:site": "./site/esbuild.mjs",
    "dev": "concurrently \"npx live-server\" \"npm run dev:lib\" \"npm run dev:site\" \"npm run test -- -w --watch-files '**/*.ts'\"",
    "dev:lib": "npm run build:lib -- --watch",
    "dev:site": "npm run build:site -- --watch",
    "test": "ts-mocha -n loader=ts-node/esm -p tsconfig.json tests/**/*.test.ts",
    "format": "npx prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badlogic/littlefoot.git"
  },
  "author": "",
  "license": "BSD",
  "bugs": {
    "url": "https://github.com/badlogic/littlefoot/issues"
  },
  "homepage": "https://github.com/badlogic/littlefoot#readme",
  "dependencies": {
    "monaco-editor": "^0.40.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^10.0.1",
    "autoprefixer": "^10.4.14",
    "chai": "^4.3.7",
    "concurrently": "^8.1.0",
    "esbuild": "^0.17.19",
    "husky": "^8.0.3",
    "live-server": "^1.2.2",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.1"
  }
}
